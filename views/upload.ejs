<!DOCTYPE html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>Upload Profile Image</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="stylesheet" href="/assets/stylesheets/upload.css" />
</head>

<body>
	<nav class="navbar">
		<div class="search-bar">
			<form action="/<%= id %>/search" method="POST">
				<input
					type="text"
					name="user[bitsid]"
					id="search"
					placeholder="Search by BITS ID"
				/>
			</form>
		</div>
		<div class="links">
			<ul class="nav-links">
				<li><a href="/profile/<%= id %>">Profile</a></li>
				<li><a href="/<%= id %>/nominate">Nominate a Friend</a></li>
				<li><a href="/<%= id %>/notifications">Notifications</a></li>
				<li><a href="/auth/logout">Logout</a></li>
			</ul>
		</div>

		<div class="hamburger">
			<div class="line"></div>
			<div class="line"></div>
			<div class="line"></div>
		</div>
	</nav>
	<% if (typeof msg!=='undefined') { %>
	<div class="error-msg"><%= msg %></div>
	<% } %>
	<section class="landing">
		<div class="card">
			<h1>Upload Photo</h1>
			<form
				action="/<%= id %>/upload"
				method="POST"
				enctype="multipart/form-data"
			>
				<input
					type="file"
					id="file"
					name="profileImage"
					class="inputfile"
					data-multiple-caption="{count} files selected"
					multiple
				/>
				<input type="submit" class="btn" />
			</form>
		</div>
	</section>

	<footer>
		<h3>Follow us on:</h3>
		<div class="icons">
			<a
				href="https://www.linkedin.com/company/arcbitspilani/?originalSubdomain=in"
				><img src="/assets/images/linkedin.png" id="linkedin"
			/></a>
			<a href="https://www.facebook.com/arcbitspilani/"
				><img src="/assets/images/facebook.png" id="fb"
			/></a>
			<a href="https://www.instagram.com/sarcbitspilani/"
				><img src="/assets/images/instagram.png" id="insta"
			/></a>
		</div>
		<a href="/<%= id %>/developers"><button id="devs">Developers</button></a>
	</footer>
	<script src="/assets/scipts/app.js"></script>
</body>
